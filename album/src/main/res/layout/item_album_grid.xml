<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:support-app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <cn.jack.glideimageview.GlideImageView
        android:id="@+id/albumGridItemImageView"
        android:contentDescription="@string/image_desc"
        support-app:layout_aspectRatio="100%"
        support-app:layout_widthPercent="100%" />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/albumGridItemCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:visibility="gone" />


    <cn.jack.album.view.CheckView
        android:id="@+id/albumGridItemCheckView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:visibility="gone"/>

    <View
        android:id="@+id/disableCoverView"
        support-app:layout_aspectRatio="100%"
        support-app:layout_widthPercent="100%"
        android:background="#99c4c3c3"
        android:visibility="invisible"/>


    <ImageView
        android:id="@+id/gifTagImageView"
        android:layout_width="25dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_gif"
        android:layout_gravity="bottom"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:contentDescription="@string/image_desc"
        android:scaleType="fitXY" />


    <Button
        android:id="@+id/albumGridItemButton"
        android:background="?attr/selectableItemBackground"
        support-app:layout_aspectRatio="100%"
        support-app:layout_widthPercent="100%" />


</android.support.percent.PercentFrameLayout>