<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:support-app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <cn.jack.glideimageview.GlideImageView
        android:id="@+id/albumGridItemImageView"
        android:contentDescription="@string/image_desc"
        support-app:placeholderImageResource="@color/holder_color"
        support-app:layout_aspectRatio="100%"
        support-app:layout_widthPercent="100%" />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/albumGridItemCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:visibility="gone" />


    <cn.jack.album.CheckView
        android:id="@+id/albumGridItemCheckView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:visibility="gone"/>

    <View
        android:id="@+id/disableCoverView"
        support-app:layout_aspectRatio="100%"
        support-app:layout_widthPercent="100%"
        android:background="#99c4c3c3"
        android:visibility="invisible"/>



    <Button
        android:id="@+id/albumGridItemButton"
        android:background="?attr/selectableItemBackground"
        support-app:layout_aspectRatio="100%"
        support-app:layout_widthPercent="100%" />


</android.support.percent.PercentFrameLayout>